{% extends 'base.html.twig' %}

{% block title %}Fighter{% endblock %}

{% block body %}
    <h1>Fighter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fighter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ fighter.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ fighter.surname }}</td>
            </tr>
            <tr>
                <th>Pseudonym</th>
                <td>{{ fighter.pseudonym }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ fighter.age }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ fighter.weight }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ fighter.height }}</td>
            </tr>
            <tr>
                <th>Reach</th>
                <td>{{ fighter.reach }}</td>
            </tr>
            <tr>
                <th>Stance</th>
                <td>{{ fighter.stance }}</td>
            </tr>
            <tr>
                <th>Organisation</th>
                <td>{{ fighter.organisation.name }}</td>
            </tr>
            {% for cat in fighter.category %}
            <tr>
                <th>Category</th>
                <td>{{ cat.name }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ fighter.resume.resume }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fighter_index') }}">back to list</a>

    <a href="{{ path('app_fighter_edit', {'id': fighter.id}) }}">edit</a>

    {{ include('fighter/_delete_form.html.twig') }}
{% endblock %}
